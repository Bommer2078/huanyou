
.statistics-page {
    width: 100%;
    margin-bottom: 130rpx;
}
.statistics-page .search-header {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
        -ms-flex-align: center;
            align-items: center;
    height: 65rpx;
    margin-bottom: 8rpx;
    background: #fff;
}
.search-header .date-select {
    width: 30%;
    text-align: center;
    font-size: 13px;
    color: #666666;
}
.search-header .search-input {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
        -ms-flex-align: center;
            align-items: center;
    width: 70%;
    position: relative;
    font-size: 13px;
}
.search-input ._img{
    position: absolute;
    left: 20rpx;
    width: 14px;
    height: 14px;
}
.search-input input{
    width: 70%;
    height: 40rpx;
    line-height: 40rpx;
    padding-left: 60rpx;
    margin-right: 20rpx;
    background:rgba(241,241,241,1);
    border-radius:6px;
}
.search-input .search-btn{
    width:70rpx;
    height:40rpx;
    line-height:40rpx;
    text-align: center;
    font-size: 11px;
    color: #fff;
    background:rgba(255,204,0,1);
    border-radius:6rpx;
}
.statistics-item {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    -webkit-flex-direction: column;
        -ms-flex-direction: column;
            flex-direction: column;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
        -ms-flex-pack: justify;
            justify-content: space-between;
    min-height: 150rpx;
    margin-left: 13rpx;
    margin-right: 13rpx;
    padding-top:10rpx;
    background:rgba(255,255,255,1);
    border-radius:4px;
    margin-bottom: 8rpx;
}
.statis-num {
    font-size: 14px;
    margin-left: 15rpx;
    margin-bottom: 10rpx;
}
.statistics-item .title-row{
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
        -ms-flex-align: center;
            align-items: center;
    font-size: 11px;
    text-align: center;
    color: #666666;
}
.statistics-item .info-row{
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
        -ms-flex-align: center;
            align-items: center;
    font-size: 15px;
    font-weight: 700;
    text-align: center;
    color: #000;
}
.statistics-item .code{
    font-size: 11px;
    color: #FFCC00;
    margin-left: 10rpx;
    line-height: 40rpx;
}
.title-row text,.info-row text {
    width: 33%;
}
.none-item {
    color: #888;
    line-height: 350px;
    text-align: center;
}

