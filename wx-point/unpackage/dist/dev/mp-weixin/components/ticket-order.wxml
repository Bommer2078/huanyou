<view data-event-opts="{{[['tap',[['handleTap',['$event']]]]]}}" class="ticket-order" bindtap="__e"><view class="order-header"><text class="location">{{item.itemPlaceName||'特惠票'}}</text><text class="order-num">{{item.count+"张票"}}</text></view><view class="order-info"><view class="row-item"><view class="ticket-title"><image class="ticket-icon _img" src="/static/img/icon.png"></image><text>{{''+item.itemName+''}}</text></view><text class="ticket-pirce">{{'￥'+item.price/100+''}}</text></view><view class="row-item"><text class="item-left">{{'购买时间：'+$root.m0+''}}</text><text class="item-right">{{'总价：'+item.price/100+''}}</text></view></view><view class="order-bottom"><block wx:if="{{item.status===3}}"><text class="item-left">查看详情</text></block><block wx:if="{{item.status===1}}"><text class="item-left">去付款</text></block><view class="item-right icon-arrow"></view></view></view>