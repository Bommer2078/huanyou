
.ticket-order {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    height: 297rpx;
    padding-left: 26rpx;
    padding-right: 26rpx;
    background: #fff;
    border-radius: 12px;
}
.order-header,.row-item,.order-bottom {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.order-header {
    height: 60rpx;
    line-height: 60rpx;
    border-bottom: 1px solid #F3F3F3;
}
.order-header .location {
    font-size: 15px;
}
.order-header .order-num {
    font-size: 14px;
    color: #7C7C7C;
}
.order-info {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    width: 100%;
    height: 167rpx;
    color: #000;
    padding-top: 20rpx;
    padding-bottom: 20rpx;
    border-bottom: 1px solid #F3F3F3;
}
.order-info .ticket-title {
    font-size: 16px;
    font-weight: 700;
    vertical-align: middle;
}
.order-info .ticket-pirce,
.order-info .item-right {
    font-size: 14px;
}
.order-info .item-left,    
.order-bottom .item-left {
    font-size: 15px;
}
.order-info .item-right {        
    color: #7C7C7C;
    flex-shrink: 0;
}
.order-bottom {
    height: 67rpx;
    line-height: 67rpx;
}
.ticket-icon {
    width: 41rpx;
    height: 31rpx;
    margin-right: 5px;
    vertical-align: middle;
}
.icon-arrow {        
    display: inline-block;
    width: 8px;
    height: 8px;
    margin-right: 5px;
    border: 1px solid #38210B;
    -webkit-transform: rotate(45deg);
            transform: rotate(45deg);
    border-left: transparent;
    border-bottom: transparent;
}

