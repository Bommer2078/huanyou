<view class="pay-page"><view class="ticket-name">{{goodsObj.name}}</view><view class="ticket-body"><view class="item"><text class="lable">数量</text><view class="num-change"><view data-event-opts="{{[['tap',[['reduceNum',['$event']]]]]}}" class="reduce" bindtap="__e">-</view><view class="num-input">{{count}}</view><view data-event-opts="{{[['tap',[['addNum',['$event']]]]]}}" class="add" bindtap="__e">+</view></view></view><view class="item"><text class="lable">单价</text><view class="price">￥<text>{{goodsObj.price/100}}</text></view></view></view><block wx:if="{{goodsObj.type===0}}"><view class="ticket-info"><view class="item"><text class="lable">手机号码</text><input class="form-input" type="text" placeholder="请输入..." data-event-opts="{{[['input',[['__set_model',['','phone','$event',['trim']]]]],['blur',[['$forceUpdate']]]]}}" value="{{phone}}" bindinput="__e" bindblur="__e"/></view><view class="item"><text class="lable">收件人姓名</text><input class="form-input" type="text" placeholder="请输入..." data-event-opts="{{[['input',[['__set_model',['','checkName','$event',['trim']]]]],['blur',[['$forceUpdate']]]]}}" value="{{checkName}}" bindinput="__e" bindblur="__e"/></view><view class="item"><text class="lable">收件人地址</text><input class="form-input" type="text" placeholder="请输入..." data-event-opts="{{[['input',[['__set_model',['','checkAdd','$event',['trim']]]]],['blur',[['$forceUpdate']]]]}}" value="{{checkAdd}}" bindinput="__e" bindblur="__e"/></view><view class="item"><view class="total-count">总计：<text>{{totalPrice}}</text>元</view></view></view></block><view data-event-opts="{{[['tap',[['creatOrder',['$event']]]]]}}" class="confirm-btn" bindtap="__e">{{'去支付'+totalPrice+'元'}}</view></view>