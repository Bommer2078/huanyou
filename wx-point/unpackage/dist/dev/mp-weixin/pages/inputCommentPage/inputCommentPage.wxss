.input-comment-page {
  width: 100vw;
  height: 100vh;
  background: #f3f3f3;
}
.input-comment-page .comment-cover {
  position: relative;
  height: 440rpx;
  margin-bottom: 100rpx;
}
.input-comment-page .comment-cover textarea {
  font-size: 30rpx;
  padding: 40rpx;
  width: 100vw;
  height: 440rpx;
  background: #fff;
  word-break: break-all;
  box-sizing: border-box;
}
.input-comment-page .number-cover {
  display: flex;
  align-items: center;
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
}
.input-comment-page .input-number {
  color: #e30000;
  font-size: 26rpx;
}
.input-comment-page .input-limite {
  color: #a0a0a0;
  font-size: 26rpx;
}
.input-comment-page .comment-btn {
  width: 588rpx;
  height: 74rpx;
  line-height: 74rpx;
  font-size: 32rpx;
  color: #fff;
  text-align: center;
  margin: 0 auto;
  background: linear-gradient(-53deg, #FF900E, #FFCC00);
  border-radius: 14rpx;
}

