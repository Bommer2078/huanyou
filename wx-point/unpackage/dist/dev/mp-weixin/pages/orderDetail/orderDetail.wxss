    background: #fff;
    border-bottom: 2px dashed #f3f3f3;
}
.order-info::before,
.order-info::after{
    content: '';
    position: absolute;
    width: 20px;
    height: 20px;
    border-radius: 50%;
    background: #f3f3f3;
    bottom: -10px;
    right: -10px;
    z-index: 1;
}
.order-info::after {
    left: -10px;
}
