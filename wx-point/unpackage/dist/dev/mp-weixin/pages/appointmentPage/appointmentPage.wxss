        text-align: center;
        margin-bottom: 10rpx;
        background: #ffcc00;
}
.box .box-name {
        width: 100%;
        text-align: left;
        font-size: 13px;
        padding: 20rpx;
}
.confirm-btn {
        position: absolute;
        bottom: 20px;
        width: 78.4%;
        height: 74rpx;
        margin: 0 auto;
        font-size: 16px;
        line-height: 74rpx;
        text-align: center;
        color: #fff;
        border-radius: 6px;
        background: -o-linear-gradient(143deg,rgba(255,144,14,1),rgba(255,204,0,1));
        background: linear-gradient(-53deg,rgba(255,144,14,1),rgba(255,204,0,1));
}
.mask {
        position: fixed;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        background: #888;
        opacity: .5;
        z-index: 3;
}

