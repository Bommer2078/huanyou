
.search-page {
    width: 100%; 
    background: #F3F3F3;
}
.search-input-cover {
    height: 80rpx;
    width: 100%;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: center;
    -webkit-justify-content: center;
            justify-content: center;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    background: #FFCC00;
}
.search-input {
    height: 40rpx;
    line-height: 40rpx;
    width: 550rpx;
    padding-left: 20rpx;
    font-size: 11px;
    background: #F1F1F1;
    border-radius: 4px;
}
.search-btn {
    width: 72rpx;
    height: 56rpx;
    line-height: 55rpx;
    font-size: 12px;
    text-align: center;
    margin-left: 26rpx;
    background:rgba(255,255,255,1);
    border-radius:7rpx;
}
.tabs {
    width: 100%;
    height: 62rpx;
    line-height: 62rpx;
    background: #fff;
    margin-bottom: 18rpx;
}
.tabs-item {
    position: relative;
    display: inline-block;
    width: 50%;
    text-align: center;
    color: #797979;
    font-size: 12px;
}
.search-body {
    margin-left: 20rpx;
    margin-right: 20rpx;
    background: #fff;
    box-shadow:0px 6px 4px 0px rgba(0,0,0,0.02);
    border-radius:14px;
    overflow: hidden;
}
.search-item {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    -webkit-box-pack: start;
    -webkit-justify-content: flex-start;
            justify-content: flex-start;
    padding-left: 25rpx;
    height: 95rpx;
    font-size: 13px;
    color: #373737;
    border-bottom: 1px solid #f0f0f0;
}
.search-item ._img {
    width:60rpx;
    height:60rpx;
    background:-webkit-linear-gradient(143deg,rgba(255,144,14,1),rgba(255,204,0,1));
    background:linear-gradient(-53deg,rgba(255,144,14,1),rgba(255,204,0,1));
    border-radius:50%;
    margin-right: 22rpx;
}
.active {
    font-size: 14px;
    color: #000;
}
.active::after {
    content: '';
    position: absolute;
    display: block;
    left: 50%;
    bottom: 6rpx;
    margin-left: -18rpx;
    width:35rpx;
    height:6rpx;
    background:-webkit-linear-gradient(143deg,rgba(255,144,14,1),rgba(255,204,0,1));
    background:linear-gradient(-53deg,rgba(255,144,14,1),rgba(255,204,0,1));
}
.empty {
    padding-top: 60rpx;
    padding-bottom: 60rpx;
    font-size:14px;
    color: #888;
    text-align: center;
}

