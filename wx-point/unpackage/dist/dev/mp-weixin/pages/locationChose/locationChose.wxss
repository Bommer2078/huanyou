
.location-chose {
    width: 100%;
    background: #fff;
}
.location-list {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-justify-content: space-around;
            justify-content: space-around;
    -webkit-flex-wrap:wrap;
            flex-wrap:wrap;
    padding: 20rpx;
}
.location-chosed {
    opacity: 1 !important;
}
.location-item {
    min-width: 30%;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    padding-left: 10px;
    padding-right: 10px;
    background: #ffcc00;
    border-radius: 6px;
     opacity: 0.6;
    box-shadow:3px 2px 15px 1px rgba(0,0,0,0.07);
}
.location-item + .location-item {
    margin-bottom: 20rpx;
}

