
.location-chose {
    width: 100%;
    background: #f3f3f3;
}
.title-tip {
    padding-left: 20rpx;
    padding-top: 20rpx;
    color: #666666;
    font-size: 28rpx;
}
.location-list {
    display: flex;
    justify-content: space-between;
    flex-wrap:wrap;
    padding: 20rpx;
}
.location-chosed {
    opacity: 1 !important;
}
.location-item {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    min-width: 30%;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    padding-left: 10px;
    padding-right: 10px;
    background: #fff;
    border-radius: 4px;
     opacity: 0.6;
    box-shadow:3px 2px 15px 1px rgba(0,0,0,0.07);
}
.location-item ._img{
    width: 50rpx;
    height: 35rpx;
}
.location-item + .location-item {
    margin-bottom: 20rpx;
}

