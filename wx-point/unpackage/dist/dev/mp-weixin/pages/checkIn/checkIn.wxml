<view class="check-in-content"><view class="check-in-banner"><image class="bg _img" src="/static/img/bannerBg.png"></image><view class="check-in-bottom"></view><view class="check-in-container"><view class="check-in-header"><image src="{{currentTicketObj.bindingPhoto}}" mode="aspectFill" data-event-opts="{{[['tap',[['clickImg',['$event']]]]]}}" bindtap="__e"></image><text class="right">{{currentTicketObj.bindingName}}</text><view data-event-opts="{{[['tap',[['preUploadImg',['$event']]]]]}}" class="{{['change-photo-btn',(currentTicketObj.verify)?'forbid-change-photo':'']}}" bindtap="__e">修改照片</view></view><view class="check-in-body"><view class="item"><text class="left">手机号码</text><text class="right">{{currentTicketObj.username}}</text></view><view class="item"><text class="left">联票编码</text><text class="right">{{currentTicketObj.childCode}}</text></view></view></view><text class="tip">* 点击头像可放大查看</text></view><view class="QRcode"><image class="ticket-bg _img" src="/static/img/checkTicket.png"></image><view class="QRcode-container"><view class="QRcode-header"><view data-event-opts="{{[['tap',[['switchCurrentTicketType',['$event']]]]]}}" class="title" bindtap="__e"><text>{{''+currentTicketObj.itemName+''}}</text></view><view class="code"><text>密码</text><text class="code-num" hover-class="password-open">{{currentTicketObj.password}}</text></view></view><view data-event-opts="{{[['tap',[['handleChangeQR',['$event']]]]]}}" class="QRcode-body" bindtap="__e"><tki-qrcode class="vue-ref" vue-id="1" size="360" unit="upx" background="transparent" onval="{{true}}" val="{{QRStr}}" data-ref="qrcode" data-event-opts="{{[['^result',[['qrR']]]]}}" bind:result="__e" bind:__l="__l"></tki-qrcode></view><view style="text-align:center;">{{currentTicket+1+"/"+(ticketList&&ticketList.length)}}</view></view><view data-event-opts="{{[['tap',[['goLeft',['$event']]]]]}}" class="left-btn" bindtap="__e"><text>上一张</text></view><view data-event-opts="{{[['tap',[['goRight',['$event']]]]]}}" class="right-btn" bindtap="__e"><text>下一张</text></view></view></view>