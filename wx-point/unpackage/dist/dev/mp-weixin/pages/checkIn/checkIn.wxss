
.check-in-content {
    width: 100%;
    min-height: 100vh;
    background: #F3F3F3;
}
.check-in-banner {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: center;
    -webkit-justify-content: center;
            justify-content: center;
    position: relative;
    width: 100%;
    height: 500rpx;
    margin-bottom: 40rpx;
}
.check-in-banner .bg{
    position: absolute;
    top: 0;
    width: 100%;
}
.check-in-bottom {    
    position: absolute;
    top: 50rpx;
    width: 86%;
    height: 450rpx;
    border-radius: 8px;
    background: #fff;
    opacity: .9;
    z-index: 1;
    box-shadow:3px 2px 15px 1px rgba(0,0,0,0.07);
}
